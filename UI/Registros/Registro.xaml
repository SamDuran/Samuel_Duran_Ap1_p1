<Window x:Class="Samuel_Duran_Ap1_p1_.UI.Registro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samuel_Duran_Ap1_p1_.UI"
        mc:Ignorable="d"
        Title="PROGRAMA X" Height="400" Width="600">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ID" />
                <!--<TextBox Text={Binding id} Width="100">

                </TextBox>-->
                <Button x:Name="buscarBtn" Margin="10" Click="buscarBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="🔎Buscar"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="nuevoBtn" Margin="10" Click="nuevoBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="🆕 Nuevo"/>
                    </StackPanel>
                </Button>
                <Button x:Name="guardarBtn" Margin="10" Click="guardarBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="✅ Guardar"/>
                    </StackPanel>
                </Button>
                <Button x:Name="eliminarBtn" Margin="10" Click="eliminarBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="❌ Eliminar"/>
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>