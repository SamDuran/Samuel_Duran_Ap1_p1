<Window x:Class="Samuel_Duran_Ap1_p1_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Samuel_Duran_Ap1_p1_"
        mc:Ignorable="d"
        Icon="./Resources/Icon.png"
        Title="Programa de gestion de productos" Height="380" Width="520">
    <Grid>
        <Image Source ="./Resources/Main_BG.png" Height="380" Width="520" Grid.RowSpan="8" Grid.Row="1"/>
        <StackPanel>
            <Menu Height="25" Width="160" HorizontalAlignment="Center">
                <MenuItem x:Name="RegistrosMenuItem" Header="Registros" FontSize="18" Height="23" Width="80">
                    <MenuItem x:Name="rMenuItem" Header="Registro de productos" Click="rMenuItem_Click"/>
                </MenuItem>
                <MenuItem x:Name="ConsultaMenuItem" Header="Consulta" FontSize="18" Height="23" Width="80">
                    <MenuItem x:Name="cMenuItem" Header="Consulta de productos" Click="cMenuItem_Click"/>
                </MenuItem>
            </Menu>
            <Label HorizontalAlignment="Center" FontSize="28" Content= "Registro y consulta de productos" Foreground="#FFFFFF"/>
        </StackPanel>
    </Grid>
</Window>
